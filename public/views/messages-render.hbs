{{#if messages.length}}
    {{#each messages}}
        <div class="message d-flex flex-column p-1 m-1">
            <div class="info d-flex">
                <p class="email text-light"><u>{{this.mail}}</u> : </p>
            </div>
            <div class="border rounded mb-1">
                <p class="text text-light">&emsp;{{this.text}}</p>
            </div>
            <p class="date forgot me-auto">{{this.date}}</p>
        </div>
    {{/each}}
{{/if}}