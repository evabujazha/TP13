
<header class="title d-flex flex-column">
    <h1 class="text-light text-center mt-2 mb-5">Bienvenido {{this.name}} </h1>
    <form method="post" action="/logout">
        <a href="/logout" class="btn btn-primary style-button"> Log-out </a>
    </form>
</header>
<main>
    <section class="container-fluid d-flex messages h-50 border-light ">
        <form id="messageForm" class="d-flex flex-column w-50 me-1" autocomplete="off" >
            <input type="text" autocomplete="false" name="hidden" style="display:none">
            <input class="bg-dark text-light m-1 style-input" type="email" name="email" id="email" placeholder="Ingrese su mail" required>
            <input class="bg-dark text-light m-1 style-input" type="text" placeholder="Su mensaje ..." name="text" id="text" required>
            <button class="btn btn-primary style-button">Enviar</button>
        </form>
        <aside class="messages border rounded d-flex flex-column w-50 ms-1">
            <div class="d-flex flex-column m-2" id="messageDisplay">
            </div>
        </aside>
    </section>
    <section class="container-fluid d-flex justify-content-around align-items-center products mt-4 border-light">
        <div class="w-25">
            <h4 class="text-light text-center">Ingrese los datos del producto</h4>
            <form id="newProduct" autocomplete="off">
                <input type="text" autocomplete="false" name="hidden" style="display:none">
                <div class="form-group">
                    <label for="id"><b class="text-light">ID</b></label>
                    <input  id="ID" class="form-control bg-dark text-light" type="number" name="id" required>
                </div>
                <div class="form-group">
                    <label for="name"><b class="text-light">Name</b></label>
                    <input id="NAME" class="form-control bg-dark text-light" type="text" name="NAME" required>
                </div>

                <div class="form-group">
                    <label for="price"><b class="text-light">Price</b></label>
                    <input id="price" class="form-control bg-dark text-light" type="number" name="price" required>
                </div>

                <div class="form-group">
                    <label for="src"><b class="text-light">SRC</b></label>
                    <input id="src" class="form-control bg-dark text-light" type="text" name="src" required>
                </div>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-primary mt-3 mb-5 style-button">Enviar</button>
                </div>
            </form>
        </div>
        <div class="border" id="productos">
            <!-- Productos -->
        </div>
    </section>
</main>
<script src="/socket.io/socket.io.js"></script>
<script src="../js/main.js"></script>
